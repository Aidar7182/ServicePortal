@model IEnumerable<Portal.Models.Login>

@{
    ViewBag.Title = "Index";
}

<h2>Список пользователей Portal HBK</h2>

<p class="btn btn-default">
    @Html.ActionLink("Добавить новую запись", "Create", "Login")
</p>
<br />
<br />


<table id="myTable" class="table table-condensed">
    <thead>
        <tr>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Роль</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@Html.DisplayFor(modelItem => item.Loginn)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>@Html.DisplayFor(modelItem => item.RoleID.UserRole)</td>
                <td>@Html.DisplayFor(modelItem => item.StatusID.UserStatus)</td>

                <td>
                    @Html.ActionLink("Изменить", "Edit", "Login", new { id = item.ID }, null) |
                    @Html.ActionLink("Удалить", "Delete", "Login", new { id = item.ID }, null)
                </td>

            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
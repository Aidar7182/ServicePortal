@model Portal.Models.Login

@{
    ViewBag.Title = "Create";
}

<h2>Добавление нового пользователя</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-12">
            <p><b>Выберите Сотрудника</b><br />@Html.DropDownListFor(m => m.EmployeeID.ID, Model.LEmployee, ViewBag.Default as string)</p>
            @Html.ValidationMessageFor(model => model.EmployeeID.FullName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <h4>Введите логин</h4>
            @Html.EditorFor(login => login.Loginn, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(login => login.Loginn, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <h4>Введите пароль</h4>
            @Html.EditorFor(login => login.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(login => login.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <p><b>Выберите роль</b><br />@Html.DropDownListFor(m => m.RoleID.ID, Model.LRole, ViewBag.Default as string)</p>
            @Html.ValidationMessageFor(model => model.RoleID.UserRole, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-12">
            <p><b>Выберите статус</b><br />@Html.DropDownListFor(m => m.StatusID.ID, Model.LStatus, ViewBag.Default as string)</p>
            @Html.ValidationMessageFor(model => model.StatusID.UserStatus, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" value="Создать" class="btn btn-success" />
        </div>
    </div>
</div>
}
<hr />
<div>
    @Html.ActionLink("Назад", "Index")
</div>

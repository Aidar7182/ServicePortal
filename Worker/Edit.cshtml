@model Portal.Models.Employee

@{
    ViewBag.Title = "Edit";
}

<h2>Личный кабинет сотрудника</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-12">
                <h4>ФИО</h4>
                @Html.EditorFor(x => x.FullName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <p><b>Отдел</b><br />@Html.DropDownListFor(m => m.DepartmentID.ID, Model.LDepartment, ViewBag.Default as string)</p>
                @Html.ValidationMessageFor(model => model.DepartmentID.DepartName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-12">
                <p><b>Должность</b><br />@Html.DropDownListFor(m => m.PositionID.ID, Model.LPosition, ViewBag.Default as string)</p>
                @Html.ValidationMessageFor(model => model.PositionID.PosName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-12">
                <p><b>Внутренний номер</b><br />@Html.DropDownListFor(m => m.ExtNumberID.ID, Model.LExtNumber, ViewBag.Default as string)</p>
                @Html.ValidationMessageFor(model => model.ExtNumberID.Number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <h4>Email</h4>
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <h4>Мобильный номер</h4>
                @Html.EditorFor(x => x.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <h4>Whats App номер</h4>
                @Html.EditorFor(x => x.WhatsUP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.WhatsUP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-12">
                <p><b>Состояние сотрудника</b><br />@Html.DropDownListFor(m => m.StatusID.ID, Model.LEmpStatus, ViewBag.Default as string)</p>
                @Html.ValidationMessageFor(model => model.StatusID.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </div>
    </div>
}
<hr />
<div>
    @Html.ActionLink("Назад", "Index")
</div>

